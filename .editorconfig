# EditorConfig for Erlang Rebar Config Parser
# https://editorconfig.org/

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Go source files
[*.go]
indent_style = tab
indent_size = 4

# Go module files
[{go.mod,go.sum,go.work,go.work.sum}]
indent_style = tab
indent_size = 4

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false  # Preserve trailing spaces for line breaks

# YAML files (GitHub Actions, Docker Compose, etc.)
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript files (for documentation)
[*.{js,jsx,ts,tsx,vue}]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass,less}]
indent_size = 2

# HTML files
[*.{html,htm}]
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh,fish}]
indent_size = 2

# Makefiles (must use tabs)
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# Dockerfile
[{Dockerfile,*.dockerfile}]
indent_size = 2

# Configuration files
[*.{toml,ini}]
indent_size = 2

# Erlang configuration files
[*.config]
indent_size = 2

# Environment files
[.env*]
indent_size = 2

# Git files
[.git*]
indent_size = 2

# Package files
[package.json]
indent_size = 2

[package-lock.json]
indent_size = 2
insert_final_newline = false

# Documentation specific
[docs/**/*.md]
indent_size = 2

[docs/**/*.{js,ts,vue,json}]
indent_size = 2
